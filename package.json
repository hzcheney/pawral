{
  "name": "pawral",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "pnpm --filter @pawral/server dev & pnpm --filter @pawral/web dev",
    "dev:server": "pnpm --filter @pawral/server dev",
    "dev:web": "pnpm --filter @pawral/web dev",
    "build": "pnpm --filter @pawral/server build && pnpm --filter @pawral/web build",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix && pnpm format",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "check": "pnpm format:check && pnpm -r exec tsc --noEmit && pnpm lint",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "prepare": "git config core.hooksPath git-hooks || true"
  },
  "devDependencies": {
    "oxlint": "latest",
    "oxfmt": "latest",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@types/node": "^22.15.0",
    "tsx": "^4.19.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "@lydell/node-pty"
    ]
  }
}